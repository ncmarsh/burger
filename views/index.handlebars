{{!-- HTML for handlebars to render to --}}
<div class="jumbotron">
  <h1>Eat All the Burgers!</h1>
</div>

<div class="container">
  <div class="row burger-display">
    <div class="col options">
      <h2>Burgers!</h2>

      <ul>
        {{#each burger}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col eaten">
      <h2>Devoured Burgers!</h2>

      <ul>
        {{#each burger}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row make-burger">
    <div class="col">
      <h3>Make a New Burger</h3>
      <form class="burger-form">
        <div>
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="burger_name">
          <button type="submit" class="btn btn-dark">Make Burger</button>
        </div>
      </form>
    </div>
  </div>
</div>



